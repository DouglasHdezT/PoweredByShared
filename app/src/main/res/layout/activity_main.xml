<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.debugprojects.poweredby.MainActivity">

    <ImageView
        android:id="@+id/image_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/icono_powered" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="@string/name_author"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/author_career"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        >

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/email_icon" />

        <TextView
            android:id="@+id/edit_text_email"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/text_mail"
            />

        <ImageView
            android:id="@+id/icon_wa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/icon_whatapps" />

        <TextView
            android:id="@+id/edit_text_wa"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/text_phone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        >

        <ImageView
            android:id="@+id/icon_github"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/github_icon"/>

        <TextView
            android:id="@+id/edit_text_github"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/text_git"
            />

        <ImageView
            android:id="@+id/icon_fb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/fb_icon"
            />

        <TextView
            android:id="@+id/edit_text_facebook"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/text_facebook"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:text="@string/text_share_button"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/text_sign"/>

</LinearLayout>
